#include <stdio.h>
#include <stdio.h>
#include <stdlib.h>
#include <conio.h>

//     s1  s2  s3     m1  m2     m1  m2
// w   0   0   0      1   1
// a   0   0   1      0   1
// z   0   1   0      1   0  ||  0   1
// q   0   1   1      0   1
// d   1   0   0      1   0
// x   1   0   1      1   1
// e   1   1   0      1   0
// c   1   1   1      1   0  ||  0   1

struct sensores{
	int ss1;
	int ss2;
	int ss3;
};

struct motores{
	int mm1;
	int mm2;
};

struct sensores LeSensores();
struct motores IA(int ss1, int ss2, int ss3);
void Motor(int mm1, int mm2);

int main(){

    while(1){
        struct sensores lleituras;
        lleituras = LeSensores();

        struct motores mmotores
        mmotores == IA(ss1,ss2,ss3);
        Motor(mm1,mm2);

    }
    return 0;
}

struct sensores LeSensores(){
    int s1,s2,s3;
    struct sensores leituras;
    char ch;
    if(kbhit()){
        ch=getch();

        if(ch == 'w'){
            s1=0;
            s2=0;
            s3=0;
        }
        else if(ch == 'a'){
            s1=0;
            s2=0;
            s3=1;
        }
        else if(ch == 'z'){
            s1=0;
            s2=1;
            s3=0;
        }
        else if(ch == 'q'){
            s1=0;
            s2=1;
            s3=1;
        }
        else if(ch == 'd'){
            s1=1;
            s2=0;
            s3=0;
        }
        else if(ch == 'x'){
            s1=1;
            s2=0;
            s3=1;
        }
        else if(ch == 'e'){
            s1=1;
            s2=1;
            s3=0;
        }
        else if(ch == 'c'){
            s1=1;
            s2=1;
            s3=1;
        }
    leituras.ss1 = s1
    leituras.ss2 = s2
    leituras.ss3 = s3
    return leituras
    }
}

struct motores IA(){

    int m1,m2;
    struct motores mmotores;

    if(ss1==0 && ss2==0 && ss3==0){
        m1=1;
        m2=1;
    }
    else if(ss1==0 && ss2==0 && ss3==1){
        m1=0;
        m2=1;
    }
    else if(ss1==0 && ss2==1 && ss3==0){
        m1=1;
        m2=0;
        }
    else if(ss1==0 && ss2==1 && ss3==1){
        m1=0;
        m2=1;
    }
    else if(ss1==1 && ss2==0 && ss3==0){
        m1=1;
        m2=0;
    }
    else if(ss1==1 && ss2==0 && ss3==1){
        m1=1;
        m2=1;
    }
    else if(ss1==1 && ss2==1 && ss3==0){
        m1=1;
        m2=0;
    }
    else if(ss1==1 && ss2==1 && ss3==1){
        m1=0;
        m2=1;
    }
    mmotores.mm1 = m1;
    mmotores.mm2 = m2;
    return mmotores;
}

void Motor(){
                printf("\r s1=%d s2=%d s3=%d      m1=%d m2=%d",s1, s2, s3, m1, m2);
}
