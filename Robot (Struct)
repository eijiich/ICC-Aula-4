#include <stdio.h>
#include <windows.h>
#include <stdlib.h>
#include <conio.h>

struct sensors{
    int s1;
    int s2;
    int s3;
};
struct motors{
    int m1;
    int m2;
};

typedef struct sensors ss;
typedef struct motors mm;

ss LeSensores();
mm IA(int sss1, int sss2, int sss3);
void Motor(int ssss1, int ssss2, int ssss3, int mmm1, int mmm2);


int main(){

	int sss1, sss2, sss3, mmm1, mmm2;

    while (1){

        ss lleituras;
        lleituras = LeSensores();

        sss1 = lleituras.s1;
        sss2 = lleituras.s2;
        sss3 = lleituras.s3;

        mm mmmotor;
        mmmotor = IA(sss1, sss2, sss3);

        mmm1 = mmmotor.m1;
        mmm2 = mmmotor.m2;

        Motor(sss1, sss2, sss3, mmm1, mmm2);
    }

    return 0;
}


ss LeSensores(){
    int ss1, ss2, ss3;
    ss leituras;
    char ch;
    if(kbhit()){
        ch=getch();

        if(ch == 'd'){
            ss1=0;
            ss2=0;
            ss3=1;
        }
        else if(ch == 'c'){
            ss1=0;
            ss2=1;
            ss3=0;
        }
        else if(ch == 'e'){
            ss1=0;
            ss2=1;
            ss3=1;
        }
        else if(ch == 'a'){
            ss1=1;
            ss2=0;
            ss3=0;
        }
        else if(ch == 'w'){
            ss1=1;
            ss2=0;
            ss3=1;
        }
        else if(ch == 'q'){
            ss1=1;
            ss2=1;
            ss3=0;
        }
        else if(ch == 'z'){
            ss1=1;
            ss2=1;
            ss3=1;
        }
        else{
            ss1=0;
            ss2=0;
            ss3=0;
        }
    }
    else{
            ss1=0;
            ss2=0;
            ss3=0;
    }
    leituras.s1 = ss1;
    leituras.s2 = ss2;
    leituras.s3 = ss3;

    return leituras;
}


mm IA(int sss1, int sss2, int sss3){

    int mm1, mm2;
    mm mmotor;

    if(sss1==0 && sss2==0 && sss3==0){
        mm1=1;
        mm2=1;
    }
    else if(sss1==0 && sss2==0 && sss3==1){
        mm1=0;
        mm2=1;
    }
    else if(sss1==0 && sss2==1 && sss3==0){
        mm1=1;
        mm2=0;
        }
    else if(sss1==0 && sss2==1 && sss3==1){
        mm1=0;
        mm2=1;
    }
    else if(sss1==1 && sss2==0 && sss3==0){
        mm1=1;
        mm2=0;
    }
    else if(sss1==1 && sss2==0 && sss3==1){
        mm1=1;
        mm2=1;
    }
    else if(sss1==1 && sss2==1 && sss3==0){
        mm1=1;
        mm2=0;
    }
    else if(sss1==1 && sss2==1 && sss3==1){
        mm1=0;
        mm2=1;
    }
    mmotor.m1 = mm1;
    mmotor.m2 = mm2;

    return mmotor;
}


void Motor(int ssss1, int ssss2, int ssss3, int mmm1, int mmm2){
    printf("\r s1=%d s2=%d s3=%d      m1=%d m2=%d",ssss1, ssss2, ssss3, mmm1, mmm2);
    Sleep(420);
}


/*     s1  s2  s3     m1  m2     m1  m2
   .   0   0   0      1   1
   d   0   0   1      0   1
   c   0   1   0      1   0  ||  0   1
   e   0   1   1      0   1
   a   1   0   0      1   0
   w   1   0   1      1   1
   q   1   1   0      1   0
   z   1   1   1      1   0  ||  0   1
*/
