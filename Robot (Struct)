#include <stdio.h>
#include <stdio.h>
#include <stdlib.h>
#include <conio.h>

//     s1  s2  s3     m1  m2     m1  m2
// w   0   0   0      1   1
// a   0   0   1      0   1
// z   0   1   0      1   0  ||  0   1
// q   0   1   1      0   1
// d   1   0   0      1   0
// x   1   0   1      1   1
// e   1   1   0      1   0
// c   1   1   1      1   0  ||  0   1

struct sensores{
	int ss1;
	int ss2;
	int ss3;
}

struct motores{
	int mm1;
	int mm2;
}

sensores LeSensores();
int IA(int ss1, int ss2, int ss3);
void Motor(int mm1, int mm2);

int main(){

    while(1){
        LeSensores();
        IA();
        Motor();
    }
    return 0;
}

sensores LeSensores(){
    struct sensores leituras;
    char ch;
    if(kbhit()){
        ch=getch();

        if(ch == 'w'){
            leituras.ss1=0;
            leituras.ss2=0;
            leituras.ss3=0;
        }
        else if(ch == 'a'){
            leituras.ss1=0;
            leituras.ss2=0;
            leituras.ss3=1;
        }
        else if(ch == 'z'){
            leituras.ss1=0;
            leituras.ss2=1;
            leituras.ss3=0;
        }
        else if(ch == 'q'){
            leituras.ss1=0;
            leituras.ss2=1;
            leituras.ss3=1;
        }
        else if(ch == 'd'){
            leituras.ss1=1;
            leituras.ss2=0;
            leituras.ss3=0;
        }
        else if(ch == 'x'){
            leituras.ss1=1;
            leituras.ss2=0;
            leituras.ss3=1;
        }
        else if(ch == 'e'){
            leituras.ss1=1;
            leituras.ss2=1;
            leituras.ss3=0;
        }
        else if(ch == 'c'){
            leituras.ss1=1;
            leituras.ss2=1;
            leituras.ss3=1;
        }
    return sensores
    }
}

void IA(){
    if(s1==0 && s2==0 && s3==0){
        m1=1;
        m2=1;
    }
    else if(s1==0 && s2==0 && s3==1){
        m1=0;
        m2=1;
    }
    else if(s1==0 && s2==1 && s3==0){
        m1=1;
        m2=0;
        }
    else if(s1==0 && s2==1 && s3==1){
        m1=0;
        m2=1;
    }
    else if(s1==1 && s2==0 && s3==0){
        m1=1;
        m2=0;
    }
    else if(s1==1 && s2==0 && s3==1){
        m1=1;
        m2=1;
    }
    else if(s1==1 && s2==1 && s3==0){
        m1=1;
        m2=0;
    }
    else if(s1==1 && s2==1 && s3==1){
        m1=0;
        m2=1;
    }
}

void Motor(){
                printf("\r s1=%d s2=%d s3=%d      m1=%d m2=%d",s1, s2, s3, m1, m2);
}
